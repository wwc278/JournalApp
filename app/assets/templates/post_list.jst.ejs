<h1>Index View</h1>
<ul>
  <% posts.each(function(post){ %>
    <li>
      <a href='#/posts/<%= post.escape("id")%>'><%= post.escape("title") %>
      </a>
      <br>
      <button class='delete' data-id='<%= post.escape("id") %>'>
        Delete
      </button>
      <button class='edit' data-id='<%= post.escape("id") %>'>Edit</button>
    </li>
  <% })%>
</ul>
<a href='#/posts/new'>New Post</a>